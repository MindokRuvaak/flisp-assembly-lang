{
    "name": "FLISP Assembly",
    "patterns": [
        {
            "include": "#symbol"
        },
        {
            "include": "#mnemonic"
        },
        {
            "include": "#operand"
        }
    ],
    "repository": {
        "symbol": {
            "patterns": [
                {
                    "include": "symbol-definition"
                },
                {
                    "include": "symbol-name"
                }
            ]
        },
        "symbol-definition": {
            "name": "symbol-definition.flispassembly",
            "match": "\\b^[a-z_][a-zA-Z_.0-9$]*\\b:"
        },
        "symbol-name": {
            "name": "symbol-name.flispassembly",
            "match": "\\b[a-z_][a-zA-Z_.0-9$]*(?=\\s*?$)"
        },
        "mnemonic": {
            "name": "mnemonic-op-code.flispassembly",
            "match": "\\b[A-Z]{3,5}\\b"
        },
        "operand": {
            "patterns": [
                {
                    "include": "hexadecimal"
                },
                {
                    "include": "decimal"
                },
                {
                    "include": "binary"
                },
                {
                    "include": "registry"
                }
            ]
        },
        "hexadecimal": {
            "name": "hexadecimal-operand.flispassembly",
            "match": ""
        },
        "decimal": {
            "name": "decimal-operand.flispassembly",
            "match": ""
        },
        "binary": {
            "name": "binary-operand.flispassembly",
            "match": ""
        },
        "registry": {
            "name": "registry-operand.flispassembly",
            "match": ""
        },
        "comments": {
            "lineComment": ";"
        },
        "indentationRules": {
            "increaseIndentPattern": "^[^;].*:.*"
        }
    },
    "scopeName": "source.flispassembly"
}